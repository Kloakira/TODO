<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg5"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.ns.yc.yccountdownviewlib.CountDownView
        android:id="@+id/cdv_time"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        app:cd_animator_time="3"
        app:cd_animator_time_unit="ç§’"
        app:cd_arc_color="@color/colorOrange"
        app:cd_arc_width="4dp"
        app:cd_bg_color="@color/colorBlue"
        app:cd_circle_radius="100dp"
        app:cd_location="top"
        app:cd_text_color="@color/colorPrimaryDark"
        app:cd_text_size="20sp" />

    <com.sdsmdg.harjot.rotatingtext.RotatingTextWrapper
        android:id="@+id/custom_switcher"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@color/colorOxford" />
</LinearLayout>